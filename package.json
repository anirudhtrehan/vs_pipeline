{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
      "build": "tsc",
    "watch": "tsc -w",
    "test:e2e": "./node_modules/.bin/_mocha --opts mocha.opts",
    "test:e2e:allure": "./node_modules/.bin/_mocha --opts mocha-allure.opts",
    "clean": "rimraf node_modules dist",
    "rebuild": "electron-builder install-app-deps",
    "report:clean": "rimraf allure*",
    "report:generate": "allure generate allure-results --clean -o allure-report",
    "report:generate:open": "allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^10.1.4",
    "electron-builder": "^22.9.1",
     "@types/chai": "^4.1.5",
    "@types/mocha": "^5.2.5",
    "@types/webdriverio": "^4.10.4",
    "chai": "^4.2.0",
    "electron": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-allure-reporter": "^1.4.0",
    "spectron": "^4.0.0",
  },
  "build": {
    "appId": "com.helloworld",
    "target": "nsis",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  }


